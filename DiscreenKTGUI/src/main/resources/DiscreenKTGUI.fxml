<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import org.controlsfx.glyphfont.Glyph?>
<GridPane fx:controller="com.herolds.discreenktgui.App.Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="TOP_LEFT" hgap="10" vgap="10">

    <Label
       GridPane.columnIndex="0" GridPane.rowIndex="0"
       text="Posters path">
    </Label>
    <TextField
        fx:id="posterPathTextField"
        GridPane.columnIndex="1" GridPane.rowIndex="0"
        promptText="/path/to/posters/">
    </TextField>

    <Button
        fx:id="posterPathButton"
        GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#selectPosterPath">
        <graphic>
            <Glyph fontFamily="FontAwesome" icon="search"/>
        </graphic>
    </Button>

    <Label
        GridPane.columnIndex="0" GridPane.rowIndex="1"
        text="Cache path">
    </Label>
    <TextField
        fx:id="cachePathTextField"
        GridPane.columnIndex="1" GridPane.rowIndex="1"
        promptText="/path/to/posters/">
    </TextField>
    <Button
        fx:id="cachePathButton"
        GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#selectCachePath">
        <graphic>
           <Glyph fontFamily="FontAwesome" icon="search"/>
        </graphic>
    </Button>

    <Button
        fx:id="saveButton"
        GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#saveConfig">
        <graphic>
            <Glyph fontFamily="FontAwesome" icon="save"/>
        </graphic>
    </Button>

    <Button
        fx:id="resetButton"
        GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#resetConfig">
        <graphic>
            <Glyph fontFamily="FontAwesome" icon="undo"/>
        </graphic>
    </Button>
</GridPane>
